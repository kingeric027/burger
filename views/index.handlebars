<div class="container">

  <div class="row">
    <div class="col-sm-12">
      <h1>Burgers!</h1>
      <p></p>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-6">

      <h2>Burgers that are not devoured!</h2>

        <ul>
        {{#each burgers}}
        {{#unless this.devoured}}
          <li>
            {{this.burger_name}}
            <button class="devouredBtn" data-id="{{id}}">Devour it!</button>
          </li>
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    
    <div class="col-sm-6">
      <h2>Burgers that are devoured</h2>
      
        {{#each burgers}}
          {{#if devoured}}
            <li>
              {{burger_name}}
            </li>
          {{/if}}
        {{/each}}
      
    </div>
  </div>
   
<div class="row">
  <div class="col-sm-12">
    <h2>Add a Burger</h2>
    <form class="create-form">
      <div class="form-group">
        <label for="burger">Burger Name:</label>
        <input type="text" id="burger" name="newBurger">
      </div>
      <button type="submit">Add Burger</button>
    </form>
   </div>
  </div>

</div>
